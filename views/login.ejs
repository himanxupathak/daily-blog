                <input type="submit" class="btn" value="LOGIN">
                <div class="or">or</div>
              </form>
              <form action="/app.html" class="google-form">
                 <input type="submit" class="input google-input" value="Login With Google">
              </form> 
            </div>
            <div class="rightContainer"></div>
         </div>  
      </div>
   </div>

