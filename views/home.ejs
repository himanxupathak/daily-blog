
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>HomePage</title>
    <script src="https://kit.fontawesome.com/987ba4e8ad.js" crossorigin="anonymous"></script>
    <link href="https://fonts.googleapis.com/css?family=Lato|Raleway&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="css/home.css">
    
    <link rel="stylesheet" media="screen and (max-width:768px)" href="css/mobile.css">
</head>
<body>
    <!-- header section -->
    <nav id="navbar">
        <header id="header">
            <div class="logo"><img src="images/logo-dailyblog.png" alt=""></div> 
            <ul class="navitems">
                <li class="items"><a class="current-a" href="#">Home</a></li>
                <li class="items"> <a href="/about">About</a></li>
                <li class="items"><a href="/contact">Contact</a></li>
                <li class="items"><a href="/logout">Logout</a></li>
                <li class="items"><a href="/compose">New</a></li>
            </ul>
        </header>
    </nav>
    <!-- main section -->
    <main id="main">
       <div class="container-1">
           <div class="innerContainer-1">
               <aside class="left-side">

                   <div class="top card">
                       <h2 class="heading-1">Popular Post By.</h2>
                       <ul class="peoples">
                           <% bloggers.forEach(function(blogger){ %>
                              <li><a href="/peoples/<%=blogger.name%>/<%=blogger.about%>/<%=blogger.img%>/<%=blogger.catogary%>"><i class="fas fa-user-alt"></i><%= blogger.name %></a></li>
                           <% }); %>
                       </ul>
                    </div>

                 <div class="bottom card">
                    <h2 class="heading-1">Trending Posts</h2>
                    <ul class="posts">
                        <li><a href="/popular/Coronavirus"><i class="fas fa-viruses "></i>Coronavirus</a></li>
                        <li><a href="/popular/India"><i class="fas fa-lock"></i>India Lockdown 5.0</a></li>
                        <li><a href="https://www.who.int/news-room/detail/29-05-2020-stop-tobacco-industry-exploitation-of-children-and-young-people"><i class="fas fa-user-md"></i>WHO latest Post</a></li>
                        <li><a href="https://www.naukri.com/mnjuser/profile?id=&altresid"><i class="fas fa-laptop-house"></i>Work From Home</a></li>
                        <li><a href="/popular/Economy"><i class="fas fa-coins"></i>Word's Economy</a></li>
                        <li><a href="/popular/Education"><i class="fas fa-book-reader"></i>Education</a></li>
                    </ul>
                </div>
               </aside>     
               <div class="another">
                     <% posts.forEach(function(post){ %>
                        <div class="main-container card">
                            <div class="innerContent">
                                <div class="special">
                                    <div class="title_email">
                                         <div class="user">
                                            <img src="/images/user.png" alt="user 2" />
                                            <div class="user-infor">
                                                 <h4><%= post.userEmail.substring(0,4) + ".."%></h4>
                                                <small><%= post.createdAt.toLocaleDateString()%></small>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="social">
                                        <a href="http://facebook.com"><i class="fab fa-facebook " target="_blank"></i></a>
                                        <a href="http://twitter.com"><i class="fab fa-twitter " target="_blank"></i></a>
                                        <a href="http://youtube.com"><i class="fab fa-whatsapp"></i></a>
                                    </div>
                                </div>
                            <h2><%= post.title %></h2>
                            <p class="content"><%=post.content.substring(0,200 ) + " ..."%></p>
                            <div class="post_body">
                               <div class="all_btns">
                                    <a href="/posts/<%=post._id%>"><input type="submit" class="btn-p" value="read more"></a>  
                                    <a href="/edits/<%=post._id%>"><input type="submit" class="btn-p edit-btn" value="edit"></a>
                                        <form action="/delete/<%= post.id %>?_method=DELETE" method="POST" class="display" >
                                          <button type="submit" name="delete" class="btn-p delete-btn">Delete</button>
                                        </form>  
                                </div>
                                <small><i class="fas fa-share"></i></small>
                            </div>
                            
                           </div>
                       </div>
                   <% }); %>                        
              
             </div>
           </div>
          
       </div>
    </main>
                                                
</body>
</html>
