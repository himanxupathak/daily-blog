        </div>
    </header>
    <!-- cpmpose route -->
    <main id="main-section">
        <div class="compose-container">
            <h2>New Post</h2>

            <form action="/compose" method="POST">
                <input name="title" class="title-input" placeholder="title.." type="text">
           
                <textarea name="content" class="content-textarea" id="" cols="30" rows="10" placeholder="content..."></textarea>
            
                <button  type="submit" class="btn">Post</button>
            </form>
            
        </div>
    </main>
